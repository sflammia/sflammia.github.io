	bibtex_show = {1},
	preview = {1205.2300.jpg},
	journal = {New J. Phys.},
	title = {Quantum Tomography via Compressed Sensing: Error Bounds, Sample Complexity, and Efficient Estimators},
	volume = {14},
	pages = {095022},
	year = {2012},
}

